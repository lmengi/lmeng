<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lmeng.mapper.AdminUserMapperCustom" >
  
  <!-- 查询简单的用户信息 -->
	<select id="queryAdminUserSimplyInfoByName" resultType="com.lmeng.pojo.Adminuser"
										 parameterType="java.lang.String" >
	    select 
	    	*
	    from 
	    	adminuser
	    where 
	    	userName = #{userName}
	</select>
</mapper>